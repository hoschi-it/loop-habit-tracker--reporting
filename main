#!/usr/bin/env python3

# reference: https://pandas.pydata.org/docs/reference/index.html
import pandas as pd
import datetime

config = {
    "last_n_days": 30,
    "output_file": "./built/dev1.html",
    "is_dev_mode": True,
}


def dates():
    today = pd.Timestamp.today().date()
    # TODO should input be a range or a date?
    oldest = today - pd.Timedelta(config['last_n_days'], 'd')
    return pd.date_range(start=oldest, end=today, normalize=True)


def prettify(df):
    html_table = df.to_html()
    title = "Report of Loop Habit Tracker"
    style = ""

    if (not config["is_dev_mode"]):
        with open('./style.css') as stylesheet:
            style = f'<style>{ stylesheet.read() }</style>'
    else:
        style = f'<link rel="stylesheet" type="text/css" href="../style.css">'

    html = f'''
<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
  {style}
</head>
<body>
  <h1>{title}</h1>
  <main>{html_table}</main>
</body>
</html>
    '''

    return html


def main():
    df = pd.read_csv(
        './example-data.d/Checkmarks.csv',
        index_col=0
    )

    df.index = pd.to_datetime(df.index)

    df = df.replace(to_replace={
        -1: "‚ùå",
        0: "?",
        2: "‚úÖ",
        1: "üÜó",
    })

    try:
        df = df.loc[dates()]
    except KeyError:
        print("Not all past days exist in the exported file. Continuing anyway.")

    df.index = df.index.strftime('%a %d. %b')

    html = prettify(df.T)

    # XXX work in progress
    with open(config["output_file"], 'w') as file:
        file.write(html)


main()
